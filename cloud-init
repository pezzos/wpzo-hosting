# Note, that the list has to be proper yaml, so you have to quote
# any characters yaml would eat (':' can be problematic)
runcmd:
 - [ ls, -l, / ]
 - [ sh, -xc, "echo $(date) ': hello world!'" ]
yum update
sed -c -i "s/^#Port 22/Port 6922/" /etc/ssh/sshd_config
sed -c -i "s/^#PermitRootLogin yes/PermitRootLogin no/" /etc/ssh/sshd_config


semanage port -a -t ssh_port_t -p tcp 6922